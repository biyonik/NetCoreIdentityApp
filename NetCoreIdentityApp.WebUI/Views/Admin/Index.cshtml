@model IQueryable<AppUser>
@{
    ViewData["Title"] = "Anasayfa - Admin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcılar - Admin</h1>
<hr />
@if (Model.Count() > 0)
{
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Kullanıcı Adı</th>
            <th>E-Posta</th>
        </tr>
    </thead>
    <tbody>
        @foreach(AppUser user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
        </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="alert alert-danger">
        <p>Sistemde kayıtlı bir üye bulunamadı!</p>
    </div>
}